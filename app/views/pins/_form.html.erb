<%= semantic_form_for @pin do |f| %>
  <%= f.semantic_errors %>

  <%= f.inputs do %>
      <%= f.input :name %>
      <%= f.input :pin_pi %>

      <%= f.input :value %>
  <% end %>

  <%= f.actions do %>
      <%= f.action :submit, :as => :button, :button_html => {:class => 'btn btn-primary btn-update'} %>
  <% end %>
<% end %>
